<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_in_view_order_form" model="ir.ui.view">
        <field name="name">l10n.in.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sales_person']" position="inside">
                <field name="l10n_in_gstin_partner_id"  groups='l10n_in.group_l10n_in_multi_gstin' options="{'no_create': True, 'always_reload': True}" context="{'show_vat':True}" domain="[('l10n_in_company_id', '=', company_id)]"/>
            </xpath>
        </field>
    </record>
</odoo>