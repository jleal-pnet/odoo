<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_l10n_in_sale" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.l10n.in.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sales_person']" position="inside">
                <field name="l10n_in_gstin_partner_id"  groups='l10n_in.group_l10n_in_multi_gstin' options="{'no_create': True, 'always_reload': True}" context="{'show_vat':True}" domain="[('l10n_in_gstin_company_id', '=', company_id)]"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="l10n_in_reseller_partner_id" groups="l10n_in.group_l10n_in_reseller"/>
            </xpath>
        </field>
    </record>
</odoo>