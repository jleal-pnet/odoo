<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <div t-name="import_xmls_widget_files" class="oe_attachments">
        <t t-if="show_table">
            <table>
                <thead>
                    <tr>
                        <th class="text-center" style="width:25%;">Filename</th>
                        <th class="text-center" style="width:15%;">Format</th>
                        <th style="width:60%;"/>
                        <th/>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="widget.value.data" t-as="file" class="oe_attachment">
                        <t t-if="!file.data.upload">
                            <tr>
                                <!-- Filename -->
                                <td class="text-left">
                                    <t t-raw="file.data.name || file.data.filename"/>
                                </td>

                                <!-- Import -->
                                <td t-if="widget.xmlMetadata[file.data.id].error === null"
                                    class="text-center" style="color:green;">
                                    <t t-raw="widget.xmlMetadata[file.data.id].type"/>
                                </td>
                                <td t-else=""
                                    class="text-center" style="color:red;">
                                    <t t-raw="widget.xmlMetadata[file.data.id].type"/>
                                </td>

                                <!-- Status -->
                                <td t-if="widget.xmlMetadata[file.data.id].error === null"/>
                                <td t-else=""
                                    class="text-center" style="color:red;">
                                    <t t-raw="widget.xmlMetadata[file.data.id].error"/>
                                </td>

                                <!-- Delete Button -->
                                <td class="text-center">
                                    <a href="#" class="fa fa-times pull-right oe_delete" title="Delete this file"
                                       t-att-data-id="file.data.id"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                    <t t-foreach="widget.uploadingFiles" t-as="file" class="oe_attachment">
                        <tr class="text-center">
                            <td class="text-left">
                                <t t-raw="file.name || file.filename"/>
                            </td>
                            <td/>
                            <td/>
                            <td class="text-center fa fa-spinner fa-spin fa-fw"/>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </div>
</templates>
