<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="tax_group" model="account.tax.group">
            <field name="name">Tax 15%</field>
        </record>

        <!-- Tax template for sale and purchase -->
        <record id="sale_tax" model="account.tax">
            <field name="name">Tax 15%</field>
            <field name="amount">15</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="tax_group"/>
        </record>

       <record id="purchase_tax" model="account.tax">
            <field name="name">Purchase Tax 15%</field>
            <field name="amount">15</field>
            <field name="type_tax_use">purchase</field>
            <field name="tax_group_id" ref="tax_group"/>
        </record>
    </data>
</odoo>
