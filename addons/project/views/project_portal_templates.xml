<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_layout" name="Portal layout: project menu entry" inherit_id="portal.portal_layout" priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'project' or project or task" class="breadcrumb-item">
                <a t-if="project or task" t-attf-href="/my/projects?{{ keep_query() }}">Projects</a>
                <t t-else="">Projects</t>
            </li>
            <li t-if="project" class="breadcrumb-item">
                <t t-esc="project.name"/>
            </li>
            <li t-if="page_name == 'task' or task" class="breadcrumb-item">
                <a t-if="task" t-attf-href="/my/project/{{ task.project_id.id }}?{{ keep_query() }}"
                   t-esc="task.project_id.name"/>
                <a t-else="">Tasks</a>
            </li>
            <li t-if="task" class="breadcrumb-item">
                <span t-field="task.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home" name="Portal My Home: project entries" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//ul[hasclass('o_portal_docs')]" position="inside">
            <li t-if="project_count" class="list-group-item">
                <span class="badge badge-secondary badge-pill float-right" t-esc="project_count"/>
                <a href="/my/projects">Projects</a>
            </li>
            <li t-if="task_count" class="list-group-item">
                <span class="badge badge-secondary badge-pill float-right" t-esc="task_count"/>
                <a href="/my/tasks">Tasks</a>
            </li>
        </xpath>
    </template>

    <template id="portal_my_projects" name="My Projects">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Projects</t>
            </t>
            <t t-if="not projects">
                <div class="alert alert-warning mt8" role="alert">
                    There are no projects.
                </div>
            </t>
            <div t-if="projects" class="card">
                <div class="table-responsive"><table class="table table-hover o_portal_my_doc_table">
                    <thead>
                        <tr class="active">
                            <th class="col-lg-6">Name</th>
                            <th>Tasks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="projects" t-as="project">
                            <td>
                                <a t-attf-href="/my/project/#{project.id}?{{ keep_query() }}"><span t-field="project.name"/></a>
                            </td>
                            <td>
                                <a t-attf-href="/my/tasks?{{keep_query('debug', filterby=project.id)}}">
                                    <t t-esc="project.task_count" />
                                    <t t-esc="project.label_tasks" />
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table></div>
            </div>
            <div t-if="pager" class="o_portal_pager text-center">
                <t t-call="portal.pager"/>
            </div>
        </t>
    </template>

    <template id="portal_my_project" name="My Project">
        <t t-call="project.portal_layout">
            <t t-set="title">Tasks</t>
            <iframe t-attf-src="/embed/project/{{ project.id }}?{{ keep_query() }}&amp;website_id={{ website_id }}"
                    class="o_project_portal_iframe"/>
        </t>
    </template>

    <template id="portal_my_tasks" name="My Tasks">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Tasks</t>
            </t>
            <t t-if="not grouped_tasks">
                <div class="alert alert-warning mt8" role="alert">
                    There are no tasks.
                </div>
            </t>
            <div t-if="grouped_tasks" class="card">
                <div class="table-responsive">
                    <t t-foreach="grouped_tasks" t-as="tasks">
                        <table class="table table-hover o_portal_my_doc_table">
                            <thead>
                                <tr class="active">
                                    <th t-if="groupby == 'none'" class="col-lg-9">Name</th>
                                    <th t-else="" class="col-lg-9"><span t-field="tasks[0].sudo().project_id.label_tasks"/> for project: <span t-field="tasks[0].sudo().project_id.name"/></th>
                                    <th class="col-lg-2">Stage</th>
                                    <th>Ref</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="tasks" t-as="task">
                                    <tr>
                                        <td>
                                            <a t-attf-href="/my/task/#{task.id}?{{ keep_query() }}"><span t-field="task.name"/></a>
                                        </td>
                                        <td>
                                            <span class="badge badge-info" title="Current stage of the task" t-esc="task.stage_id.name" />
                                        </td>
                                        <td>
                                            <span t-esc="task.id"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </div>
            <div t-if="pager" class="o_portal_pager text-center">
                <t t-call="portal.pager"/>
            </div>
        </t>
    </template>

    <template id="portal_my_task" name="My Task">
        <t t-call="project.portal_layout">
            <iframe t-attf-src="/embed/project/{{ task.project_id.id }}/{{ task.id }}?{{ keep_query() }}&amp;website_id={{ website_id }}"
                    class="o_project_portal_iframe"/>
        </t>
    </template>

    <template id="portal_project">
        &lt;!DOCTYPE html&gt;
        <html>
            <head>
                <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
                <meta http-equiv="content-type" content="text/html; charset=utf-8" />
                <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
                <base target="_parent" />

                <t t-call-assets="web.assets_common"/>
                <t t-call-assets="web.assets_backend"/>
                <t t-call-assets="web_editor.summernote"/>
                <t t-call-assets="web_editor.assets_editor"/>
                <t t-call-assets="project.assets_public_project"/>
            </head>
            <body class="o_project_portal_iframe_content o_web_client">
                <portal-project t-att-data-params="json.dumps(params)" t-att-data-options="json.dumps({'search': true})"/>
            </body>
        </html>
    </template>
</odoo>
