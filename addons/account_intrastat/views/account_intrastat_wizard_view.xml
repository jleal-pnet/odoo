<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_intrastat_wizard_form" model="ir.ui.view">
            <field name="name">Intrastat Report</field>
            <field name="model">account.intrastat.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="company_id"/>
                    </group>
                    <group>
                        <field name="include_arrivals"/>
                        <field name="include_dispatches"/>
                        <field name="extended"/>
                    </group>
                    <footer>
                        <button string="Generate" name="get_xml" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_account_intrastat_wizard" model="ir.actions.act_window">
            <field name="name">Intrastat Declaration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.intrastat.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_intrastat_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_intrastat_wizard"
            name="Intrastat Report"
            parent="account.menu_finance_legal_statement"
            action="action_account_intrastat_wizard"
            groups="account.group_account_manager"
        />
    </data>
</odoo>
