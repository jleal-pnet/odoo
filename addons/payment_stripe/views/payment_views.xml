<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_stripe" model="ir.ui.view">
        <field name="name">payment.acquirer.form.inherit</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'stripe')]}">
                    <field name="stripe_secret_key" password="True"/>
                    <field name="stripe_publishable_key" password="True"/>
                    <field name="payment_method_ids" widget="many2many_tags" attrs="{'invisible': [('payment_flow', '=', 's2s')]}"  options="{'no_create': True, 'no_open': True}"/>
                </group>
            </xpath>
            <xpath expr='//group[@name="acquirer_config"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'stripe')]}">
                    <field name="stripe_image_url"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="payment_transaction_view_form_inherit_payment_stripe" model="ir.ui.view">
        <field name="name">payment.transaction.view.form.inherit.payment.stripe</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.transaction_form"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="stripe_payment_type"  attrs="{'invisible': [('provider', '!=', 'stripe')]}"/>
            </field>
        </field>
    </record>
</odoo>
