<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_inherit_l10n_in_purchase" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.l10n.in.purchase</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="l10n_in_gstin_partner_id"  groups='l10n_in.group_l10n_in_multi_gstin' options="{'no_create': True, 'always_reload': True}" context="{'show_vat':True}" domain="[('l10n_in_gstin_company_id', '=', company_id)]"/>
            </xpath>
        </field>
    </record>
</odoo>