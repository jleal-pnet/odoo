<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_in_product_hsn_report_tree_view" model="ir.ui.view">
        <field name="name">l10n_in.product.hsn.report.tree</field>
        <field name="model">l10n_in.product.hsn.report</field>
        <field name="arch" type="xml">
            <tree string="GST product HSN Report" create="0" edit="0" delete="0">
                <field name="gstin_partner_id" groups='l10n_in.group_l10n_in_multi_gstin'/>
                <field name="hsn_code"/>
                <field name="hsn_description"/>
                <field name="product_id"/>
                <field name="uom_id"/>
                <field name="quantity"/>
                <field name="date"/>
                <field name="price_total"/>
                <field name="total"/>
                <field name="journal_id"/>
                <field name="igst_amount"/>
                <field name="cgst_amount"/>
                <field name="sgst_amount"/>
                <field name="cess_amount"/>
            </tree>
        </field>
    </record>

    <record id="l10n_in_product_hsn_report_search_view" model="ir.ui.view">
        <field name="name">l10n_in.product.hsn.report.search</field>
        <field name="model">l10n_in.product.hsn.report</field>
        <field name="arch" type="xml">
            <search string="Report Product HSN">
                
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', context_today().strftime('%%Y-%%m-01')), ('date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%%Y-%%m-01'))]"/>
                <filter string="Last Month" name="last_month" domain="['&amp;', ('date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('date', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>

                <group expand="0" string="Group By">
                    <filter string="HSN Code" name="group_hsn_code" domain="[]" context="{'group_by':'hsn_code'}"/>
                    <filter string="HSN Description" name="group_hsn_description" domain="[]" context="{'group_by':'hsn_description'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="l10n_in_product_hsn_report_action" model="ir.actions.act_window">
        <field name="name">GST Product HSN report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_in.product.hsn.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('journal_id.type', '=', 'sale')]</field>
        <field name="context">{'search_default_this_month': 1}</field>
    </record>

    <menuitem name="GST Product HSN Report" parent="l10n_in.account_reports_in_statements_menu" sequence="5" action="l10n_in_product_hsn_report_action" id="menu_l10n_in_product_hsn_report"/>

</odoo>
