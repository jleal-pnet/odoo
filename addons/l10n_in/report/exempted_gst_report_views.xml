<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_in_exempted_report_tree_view" model="ir.ui.view">
        <field name="name">l10n_in.exempted.report.tree</field>
        <field name="model">l10n_in.exempted.report</field>
        <field name="arch" type="xml">
            <tree string="GST Exempted Report">
                <field name="gstin_partner_id" groups='l10n_in.group_l10n_in_multi_gstin'/>
                <field name="account_move_id"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="out_supply_type"/>
                <field name="nil_rated_amount"/>
                <field name="exempted_amount"/>
                <field name="non_gst_supplies"/>
            </tree>
        </field>
    </record>

    <record id="l10n_in_exempted_report_search_view" model="ir.ui.view">
        <field name="name">l10n_in.exempted.report.search</field>
        <field name="model">l10n_in.exempted.report</field>
        <field name="arch" type="xml">
            <search string="Exempted Report">
                <field name="gstin_partner_id" groups='l10n_in.group_l10n_in_multi_gstin'/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', context_today().strftime('%%Y-%%m-01')), ('date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%%Y-%%m-01'))]"/>
                <filter string="Last Month" name="last_month" domain="['&amp;', ('date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('date', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Supply Type" name="group_out_supply_type" domain="[]" context="{'group_by':'out_supply_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="l10n_in_exempted_report_action" model="ir.actions.act_window">
        <field name="name">GST Exempted report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_in.exempted.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('journal_id.type', '=', 'sale'),
            '|', ('nil_rated_amount', '!=', 0),
            '|', ('exempted_amount', '!=', 0),
            ('non_gst_supplies', '!=', 0)]</field>
        <field name="context">{'search_default_this_month': 1, 'search_default_group_out_supply_type': 1}</field>
    </record>

    <menuitem name="GST Exempted Report" parent="l10n_in.account_reports_in_statements_menu" sequence="4" action="l10n_in_exempted_report_action" id="menu_l10n_in_exempted_report"/>

</odoo>
