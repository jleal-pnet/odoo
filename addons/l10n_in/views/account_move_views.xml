<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_l10n_in" model="ir.ui.view">
        <field name="name">account.move.form.inherit.l10n.in</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[2]" position="inside">
                <group string="Indian Accounting Details" groups="base.group_no_one">
                    <field name="l10n_in_import_export" invisible="1"/>
                    <field name="l10n_in_export_type" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}"/>
                    <field name="l10n_in_shipping_bill_number" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}"/>
                    <field name="l10n_in_shipping_bill_date" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}"/>
                    <field name="l10n_in_shipping_port_code_id" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}"/>
                    <field name="l10n_in_reseller_partner_id" groups="l10n_in.group_l10n_in_reseller"/>
                    <field name="l10n_in_reverse_charge"/>
                    <field name="l10n_in_gstin_partner_id" domain="[('l10n_in_gstin_company_id', '=', company_id)]" groups="l10n_in.group_l10n_in_multi_gstin" options="{'no_create': True, 'always_reload': True}" context="{'show_vat':True}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
