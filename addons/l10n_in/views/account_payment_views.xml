<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_form_inherit_l10n_in" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.l10n.in</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="company_id" invisible="1"/>
                <field name="l10n_in_gstin_partner_id" groups='l10n_in.group_l10n_in_multi_gstin' domain="[('l10n_in_gstin_company_id', '=', company_id)]" options="{'no_create': True, 'always_reload': True}" context="{'show_vat':True}"/>
            </xpath>
         </field>
    </record>

</odoo>
