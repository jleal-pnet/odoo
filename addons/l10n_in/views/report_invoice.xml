<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="l10n_in_report_invoice_document_inherit" inherit_id="account.report_invoice_document">

        <xpath expr="//table[@name='invoice_line_table']" position="before">
            <t t-if="o.company_id.country_id.code == 'IN'">
                <!-- Tag wise Tax Calculation -->
                <t t-set="display_igst" t-value="any([l.l10n_in_igst_amount for l in o.invoice_line_ids])"/>
                <t t-set="display_cgst" t-value="any([l.l10n_in_cgst_amount for l in o.invoice_line_ids])"/>
                <t t-set="display_sgst" t-value="any([l.l10n_in_sgst_amount for l in o.invoice_line_ids])"/>
                <t t-set="display_cess" t-value="any([l.l10n_in_cess_amount for l in o.invoice_line_ids])"/>
            </t>
        </xpath>

        <xpath expr="//p[@t-if='o.comment']" position="before">
            <t t-if="o.company_id.country_id.code == 'IN'">
                <p id="total_in_words" class="mb16">
                    <strong>Total (In Words): </strong>
                    <span t-field="o.amount_total_words"/>
                </p>
            </t>
        </xpath>

        <xpath expr="//table[@name='invoice_line_table']/thead/tr" position="inside">
            <t t-if="o.company_id.country_id.code == 'IN'">
                <th t-if="display_cgst" class="text-right">CGST</th>
                <th t-if="display_sgst" class="text-right">SGST</th>
                <th t-if="display_igst" class="text-right">IGST</th>
                <th t-if="display_cess" class="text-right">CESS</th>
            </t>
        </xpath>

        <xpath expr="//td[@name='account_invoice_line_name']" position="after">
            <t t-if="line.product_id.l10n_in_hsn_code"><h6><strong class="ml16">HSN/SAC Code:</strong> <span t-field="line.product_id.l10n_in_hsn_code"/></h6></t>
        </xpath>

        <xpath expr="//t[@name='account_invoice_line_accountable']" position="inside">
            <t t-if="o.company_id.country_id.code == 'IN'">
                <t t-if="o.company_id.country_id.code == 'IN'">
                    <td class="text-right" t-if="display_cgst">
                        <span t-field="line.l10n_in_cgst_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                    </td>
                    <td class="text-right" t-if="display_sgst">
                        <span t-field="line.l10n_in_sgst_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                    </td>
                    <td class="text-right" t-if="display_igst">
                        <span t-field="line.l10n_in_igst_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                    </td>
                    <td class="text-right" t-if="display_cess">
                        <t t-esc="line.l10n_in_cess_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                    </td>
                </t>
            </t>
        </xpath>

        <xpath expr="//h2" position="replace">
            <h2>
                <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')" t-field="o.journal_id.name"/>
                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft <span t-field="o.journal_id.name"/></span>
                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled <span t-field="o.journal_id.name"/></span>
                <span t-if="o.type == 'out_refund'">Credit Note</span>
                <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                <span t-field="o.number"/>
            </h2>
        </xpath>

    </template>

</odoo>
